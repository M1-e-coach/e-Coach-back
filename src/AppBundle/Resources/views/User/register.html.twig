{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body{
            background-color:#5eb0e6;
        }
        body, .container{
            height: 100vh;
        }
        .active{
            color:#5eb0e6!important;
        }
        .row{
            background: #fff;
            padding: 20px;
            border-radius: 5px;
        }
        input, label {
            margin-bottom: 15px!important;
